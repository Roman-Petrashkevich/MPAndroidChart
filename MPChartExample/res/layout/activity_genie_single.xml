<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/genie_background_color">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_steps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_large"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gilroy_medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal"
        android:text="@string/genie_poc_label_steps"/>

    <TextView
        android:id="@+id/tv_steps_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_steps_label"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_steps_label" />

</RelativeLayout>